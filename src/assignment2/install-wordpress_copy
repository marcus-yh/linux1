# Install apt dependencies needed for wordpress
sudo apt update && apt install apache2 ghostscript libapache2-mod-php \
    mysql-server mysql-server php php-bcmath php-curl php-imagick \
    php-intl php-json php-mbstring php-mysql php-xml php-zip

# Define site/domain name and where site related files will be placed
SITE_NAME=wordpress
DOMAIN_NAME=${SITE_NAME}.local
DOMAIN_DIR="/var/www/${DOMAIN_NAME}"

# 1) Create domain dir
# 2) Change owner of the domain dir from root to the logged in user
# 3) Change permissions recusrively so that become rwx-r-x-r-x
sudo mkdir -p ${DOMAIN_DIR}
sudo chown -R "${USER}:${USER}" ${DOMAIN_DIR}
sudo chmod -R 755 ${DOMAIN_DIR}

# Define wordpress configuration file content
# Note: the site will be served on port 80
WORDPRESS_CFG=$(
    cat <<END
<VirtualHost *:80>
    DocumentRoot /srv/www/${DOMAIN_NAME}
    <Directory /srv/www/${DOMAIN_NAME}>
        Options FollowSymLinks
        AllowOverride Limit Options FileInfo
        DirectoryIndex index.php
        Require all granted
    </Directory>
    <Directory /srv/www/${DOMAIN_NAME}/wp-content>
        Options FollowSymLinks
        Require all granted
    </Directory>
</VirtualHost>
END
)

# Create the wordpress configuration file
echo "${WORDPRESS_CFG}" | sudo tee /etc/apache2/sites-available/${SITE_NAME}.conf

# Install wordpress by downloading archive and extract the file to
# wordpress directory as user www-data
# HMMMM, check this
sudo mkdir -p /srv/www
sudo chown www-data: /srv/www
curl https://wordpress.org/latest.tar.gz | sudo -u www-data tar zx -C /srv/www

# enable the wordpress site for apache server
sudo a2ensite ${SITE_NAME}

# enable rewrite module of apache server for wordpress (enables rewriting of urls)
sudo a2enmod rewrite

# disable the default site for the apache server
sudo a2dissite 000-default

# reload apache configuration
sudo service apache2 reload

# run mysql as root
sudo mysql -u root

# manually create a wordpress database by entering the
# following in the mysql console
# Note: <MY_PASSWORD> shall be replaced with your password
mysql >CREATE DATABASE wordpress
mysql >CREATE USER wordpress@localhost IDENTIFIED BY '<MY_PASSWORD>'
mysql >GRANT SELECT,INSERT,UPDATE,DELETE,CREATE,DROP,ALTER
- >ON wordpress.*
- >TO wordpress@localhost
mysql >FLUSH PRIVILEGES
mysql >quit

# enable mysql service
sudo service mysql start

# as user www-data - copy default database configuration file to a new one
#sudo -u www-data cp /srv/www/wordpress/wp-config-sample.php /srv/www/wordpress/wp-config.php

# FIX THIS SECTION
# as user www-data:
# 1) replace 'database_name' with 'wordpress' in file /srv/www/wordpress/wp-config.php
# 2) replace 'user_name with' with 'wordpress' in file /srv/www/wordpress/wp-config.php
# 3) replace 'password_here' with 'MySuperSecretPassword' in file /srv/www/wordpress/wp-config.php
echo Enter database password:
password=$(read -r)
sudo -u www-data cp ${SCRIPT_DIR}/wp-config.php /srv/www/wordpress/wp-config.php
sudo -u www-data sed -i "s/<REPLACE_THIS>/${password}/" /srv/www/wordpress/wp-config.php
